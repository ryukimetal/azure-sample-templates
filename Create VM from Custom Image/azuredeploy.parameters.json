{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualMachineName": {
        "value": "myvmname"
        },
        "adminUsername": {
        "value": "username"
        },
        "adminPassword": {
        "value": "password!"
        },
        "osType": {
        "value": "Linux"
        },
        "vmSize": {
        "value": "Standard_D1"
        },
        "NICName": {
        "value": "myNIC"
        },
        "userImageStorageAccountName": {
        "value": "mystorageaccount"
        },
        "osDiskVhdUri": {
        "value": "https://mystorageaccount.blob.core.windows.net/vhds/myimage.vhd"
        },
        "virtualNetworkName": {
        "value": "myvnet"
        },
        "addressPrefix": {
        "value": "10.0.0.0/16"
        },
        "subnetPrefix": {
        "value": "10.0.0.0/24"
        },
        "subnetName": {
        "value": "mysubnet"
        },
        "publicIPAddressName": {
        "value": "mypip"
        },
        "networkSecurityGroupName": {
        "value": "mynsg"
        },
        "destinationPort": {
        "value": "22"
        }
    }
}